# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================

# Local Docker:
# postgresql://postgres:admin@db:5432/todo_app

# Local machine:
# postgresql://postgres:admin@localhost:5432/todo_app

# Managed cloud database (Example: AWS RDS):
# postgresql://USER:PASSWORD@HOST:5432/todo_app?sslmode=require

DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/auth_service

# Enable SSL when using managed/cloud databases
DB_SSL=false


# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=5000

# development | production | test
NODE_ENV=development
DOMAIN=http://localhost


# =============================================================================
# JWT CONFIGURATION (REQUIRED)
# =============================================================================

# Store RSA keys as SINGLE LINE strings with escaped newlines (\n)
# NEVER commit real keys.

JWT_PRIVATE_KEY=YOUR_PRIVATE_KEY
JWT_PUBLIC_KEY=YOUR_PUBLIC_KEY

JWT_ACCESS_TOKEN_EXPIRE=900
JWT_REFRESH_TOKEN_EXPIRE=604800


# =============================================================================
# SECURITY / CORS
# =============================================================================

CORS_ORIGIN=http://localhost:3000
COOKIE_SAMESITE=lax



HRM_CLIENT_ID=hrm-app
HRM_CLIENT_SECRET=hrm-super-secret-key-change-in-production
CRM_CLIENT_ID=crm-app
CRM_CLIENT_SECRET=crm-super-secret-key-change-in-production